doctype html
html
	head
		style
			| *{background-color:LightYellow;}
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')

		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')

		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
		
		title= 'Forget Password'
	body
		div(class="comtainer")
			div(style='float:left;margin:10px;')
				a(href='/') Home

			div(style='float:right')
					a(href='/register', style='margin:10px;') Register
					a(href='/signin', style='margin:10px;') Log In
		
			div(style='padding:50px;')
				form(role="form", name="login", action="/apis/login", method="post")
					h1 Forget Password
					div(class="form-group")
						p
							label(for="exampleInputEmail1", style='padding-right:50px') Username or e-mail
							input(class="form-control", id="exampleInputEmail1", type="text", name="user", placeholder='username@example.com')
					p
						span(style='padding-right:0px')
						input(type="submit", name="submit", value="Forget Password", class="btn btn-default btn-lg")
						